{
  "name": "thetribe",
  "version": "1.0.0",
  "description": "A fully modular, multi-guild, multi-purpose Discord bot built for collaborative development",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "bot",
    "backend",
    "frontend",
    "shared",
    "modules/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:bot\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:bot": "cd bot && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:shared && npm run build:bot && npm run build:backend && npm run build:frontend",
    "build:bot": "cd bot && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:shared": "cd shared && npm run build",
    "start": "concurrently \"npm run start:bot\" \"npm run start:backend\"",
    "start:bot": "cd bot && npm start",
    "start:backend": "cd backend && npm start",
    "test": "npm run test:bot && npm run test:backend && npm run test:frontend",
    "test:bot": "cd bot && npm test",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:bot && npm run lint:backend && npm run lint:frontend",
    "lint:bot": "cd bot && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rm -rf node_modules && rm -rf */node_modules && rm -rf */*/node_modules",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nvandendries1984/thetribe.git"
  },
  "keywords": [
    "discord",
    "bot",
    "modular",
    "multi-guild",
    "collaborative",
    "discord.js",
    "mongodb",
    "react",
    "nodejs"
  ],
  "author": "The Tribe Community",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nvandendries1984/thetribe/issues"
  },
  "homepage": "https://github.com/nvandendries1984/thetribe#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}