{
  "root": true,
  "extends": ["eslint:recommended"],
  "env": {
    "node": true,
    "es2021": true
  },
  "ignorePatterns": ["node_modules/", "dist/", "build/"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["packages/frontend/**/*.{js,jsx,ts,tsx}"],
      "env": { "browser": true, "es2021": true }
    }
  ]
}
